# ========================================
# CONFIGURACIÓN PARA DESARROLLO CON SQLITE
# ========================================

# Base de datos (SQLite - no necesitas configurar DATABASE_URL)
# La base de datos se creará automáticamente en prisma/dev.db

# ========================================
# CONFIGURACIÓN DE LA APLICACIÓN
# ========================================
NODE_ENV="development"
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# ========================================
# AUTENTICACIÓN (NEXTAUTH)
# ========================================
# Generar con: openssl rand -base64 32
NEXTAUTH_SECRET="dev_secret_key_for_development_only_32_chars"
NEXTAUTH_URL="http://localhost:3000"

# ========================================
# CONFIGURACIÓN DE EMAIL (RESEND)
# ========================================
# Para desarrollo, puedes usar valores placeholder
RESEND_API_KEY="re_dev_key_for_development"
ADMIN_EMAIL="admin@hexagono.xyz"
COMPANY_EMAIL="info@hexagono.xyz"

# ========================================
# INFORMACIÓN DE LA EMPRESA
# ========================================
COMPANY_PHONE="+54 11 1234-5678"
COMPANY_WHATSAPP="+54 11 1234-5678"

# ========================================
# ALMACENAMIENTO DE ARCHIVOS (VERCEL BLOB)
# ========================================
# Para desarrollo, puedes usar valores placeholder
BLOB_READ_WRITE_TOKEN="vercel_blob_dev_token"

# ========================================
# CONFIGURACIÓN DEL SITIO
# ========================================
NEXT_PUBLIC_SITE_URL="http://localhost:3000"
NEXT_PUBLIC_SITE_NAME="Hexágono Web"

# ========================================
# CONFIGURACIÓN DE DESARROLLO
# ========================================
DEBUG="true"
LOG_LEVEL="debug"
