// This is your Prisma schema file for SQLite development
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Quote {
  id            String   @id @default(cuid())
  quoteNumber   String   @unique
  clientName    String
  clientEmail   String
  clientPhone   String?
  clientCompany String?

  serviceType   ServiceType
  description   String?
  timeline      String?
  budgetRange   String?

  estimatedPrice Float?
  status        QuoteStatus @default(PENDING)
  priority      Priority    @default(MEDIUM)
  assignedTo    String?
  accessToken   String      @unique

  features      QuoteFeature[]
  attachments   QuoteAttachment[]
  notes         QuoteNote[]
  statusHistory QuoteStatusHistory[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model QuoteFeature {
  id          String  @id @default(cuid())
  quoteId     String
  featureName String
  featureCost Float

  quote Quote @relation(fields: [quoteId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
}

model QuoteAttachment {
  id           String @id @default(cuid())
  quoteId      String
  filename     String
  originalName String
  fileSize     Int
  mimeType     String
  storageUrl   String

  quote Quote @relation(fields: [quoteId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
}

model QuoteNote {
  id         String  @id @default(cuid())
  quoteId    String
  author     String
  note       String
  isInternal Boolean @default(true)

  quote Quote @relation(fields: [quoteId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
}

model QuoteStatusHistory {
  id             String  @id @default(cuid())
  quoteId        String
  previousStatus String?
  newStatus      String
  changedBy      String
  notes          String?

  quote Quote @relation(fields: [quoteId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
}

enum ServiceType {
  LANDING_PAGE
  CORPORATE_WEB
  ECOMMERCE
  SOCIAL_MEDIA
}

enum QuoteStatus {
  PENDING
  IN_REVIEW
  QUOTED
  COMPLETED
  CANCELLED
}

enum Priority {
  LOW
  MEDIUM
  HIGH
}
