# ========================================
# CONFIGURACIÓN DE BASE DE DATOS
# ========================================
# URL de conexión a PostgreSQL
# Formato: postgresql://usuario:contraseña@host:puerto/nombre_base_datos
DATABASE_URL="postgresql://usuario:contraseña@localhost:5432/hexagono_web"

# ========================================
# CONFIGURACIÓN DE LA APLICACIÓN
# ========================================
NODE_ENV="development"
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# ========================================
# AUTENTICACIÓN (NEXTAUTH)
# ========================================
# Generar con: openssl rand -base64 32
NEXTAUTH_SECRET="tu_nextauth_secret_aqui_minimo_32_caracteres"
NEXTAUTH_URL="http://localhost:3000"

# ========================================
# CONFIGURACIÓN DE EMAIL (RESEND)
# ========================================
# Obtener en: https://resend.com/api-keys
RESEND_API_KEY="re_tu_api_key_de_resend"
ADMIN_EMAIL="admin@hexagono.xyz"
COMPANY_EMAIL="info@hexagono.xyz"

# ========================================
# INFORMACIÓN DE LA EMPRESA
# ========================================
COMPANY_PHONE="+54 11 1234-5678"
COMPANY_WHATSAPP="+54 11 1234-5678"

# ========================================
# ALMACENAMIENTO DE ARCHIVOS (VERCEL BLOB)
# ========================================
# Obtener en: https://vercel.com/dashboard/stores
BLOB_READ_WRITE_TOKEN="vercel_blob_tu_token_aqui"

# ========================================
# CONFIGURACIÓN DEL SITIO
# ========================================
NEXT_PUBLIC_SITE_URL="https://hexagono.xyz"
NEXT_PUBLIC_SITE_NAME="Hexágono Web"

# ========================================
# CONFIGURACIÓN DE DESARROLLO (OPCIONAL)
# ========================================
DEBUG="true"
LOG_LEVEL="debug"
